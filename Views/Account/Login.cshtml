@{
    ViewData["LogRegTitle"] = "Log in to"; // xpgp
}

@model xpgp.ViewModels.LoginViewModel
<form asp-controller="Account" asp-action="LoginSubmit">
    <div id="logreg-form">
        <div id="logreg-form-content">
            <input asp-for="EmailAddress" class="logreg-input" placeholder="Email address">
            <input asp-for="Password" class="logreg-input" placeholder="Password">
        </div>

        <div id="logreg-submit-container">
            <div id="logreg-submit-text">&#10004; No cookies will be saved.</div>
            <input type="submit" id="logreg-submit" value="Log in">                    
        </div>
    </div>
</form>

@section links {
    <a>Forgot password?</a> &nbsp;&nbsp;
    <a asp-controller="Account" asp-action="Register">Need an account?&nbsp;(Register)</a><br>
    <a>What is PGP encryption?</a>
}
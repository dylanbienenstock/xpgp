@section head {
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/mobile.css">

    <script src="~/js/main.js"></script>
} 

<div id="navbar">
    <div id="navbar-menu">
        <img id="navbar-menu-icon" src="~/img/menu.svg">
    </div>

    <div id="navbar-content">
        <div>
            <h1 id="navbar-title" class="logo">xpgp</h1>
        </div>

        <div id="navbar-searchbar-container">
            <div id="navbar-searchbar">
                <input type="text" id="navbar-searchbar-input" placeholder="Find people...">

                <div id="navbar-searchbar-button">
                    <img id="navbar-searchbar-button-icon" src="~/img/search.svg">
                </div>
            </div>
        </div>

        <div id="navbar-userinfo">
            <div id="navbar-userinfo-icon"></div>

            <div id="navbar-userinfo-name-container">
                <p id="navbar-userinfo-name">Dylan Bienenstock</p>
            </div>
        </div>
    </div>
</div>

<div id="optionbar">
    <div id="optionbar-inner">
        <a class="optionbar-option" asp-controller="Main" asp-action="Index">
            <img class="optionbar-option-icon" src="~/img/view-new.svg">            
            View Keypairs
        </a>

        <a class="optionbar-option" asp-controller="Main" asp-action="NewKeyPair">
            <img class="optionbar-option-icon" src="~/img/new.svg">            
            New Keypair
        </a>

        <a class="optionbar-option" asp-controller="Main" asp-action="Index">
            <img class="optionbar-option-icon" src="~/img/encrypt.svg">            
            Encrypt
        </a>

        <a class="optionbar-option" asp-controller="Main" asp-action="Index">
            <img class="optionbar-option-icon" src="~/img/decrypt.svg">            
            Decrypt
        </a>

        <a class="optionbar-option" asp-controller="Main" asp-action="Index">
            <img class="optionbar-option-icon" src="~/img/share.svg">            
            Share
        </a>
    </div>
</div>
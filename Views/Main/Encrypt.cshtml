@{
    ViewBag.Title = "Encrypt";
}

@section scripts 
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/2.0.1/velocity.min.js" integrity="sha256-5Go41ifI+EFXy6IiyZH+HebUCkGwr78biW2nrVJIXqQ=" crossorigin="anonymous"></script>

    <script src="~/js/keypair-display.js"></script>
    <script src="~/js/keypair-display-encrypt.js"></script>

    <script>
        window.encryptUrl = document.location.origin + "@(ViewBag.EncryptUrl)";
    </script>
}

@Html.Partial("Navbar")

<div id="content">
    <div id="content-inner">
        <div class="content-panel" id="content-panel-viewkeypairs" style="height: 666px;">
            <div class="content-panel-header">
                <span id="content-header-text"></span>

                <img id="content-panel-header-back" src="~/img/back.svg">
            </div>

            <div class="content-panel-content">
                @Html.Partial("KeyList")

                <div id="keypair-display">
                    <div id="keypair-display-container-encrypt">
                        <textarea class="content-input" id="encrypt-input" placeholder="Type your message..."></textarea>

                        <div id="encrypt-buttons">
                            <button id="keypair-display-button-encrypt" class="content-panel-button content-panel-button-highlighted">Encrypt</button>
                            <button id="keypair-display-button-encryptandsign" class="content-panel-button content-panel-button-highlighted"><del>Encrypt & Sign</del></button>
                            <button id="keypair-display-button-copy" class="content-panel-button content-panel-button-highlighted">Copy</button>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

@Html.Partial("Footer")
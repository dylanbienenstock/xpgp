<div class="content-panel-content">
    @Html.Partial("KeyList")

    <div id="keypair-display">
        <div id="keypair-display-inner" style="display: none;" class="center">
            <h1 id="keypair-display-name-container">
                <img src="~/img/view-new.svg" id="keypair-display-icon">
                <span id="keypair-display-name">
            </h1>

            <div id="content-panel-qrcode-container">
                <div id="content-panel-qrcode"></div>
            </div>

            <h3 id="keypair-display-owner"></h3>

            <div>
                <button id="keypair-display-button-delete" class="content-panel-button content-panel-button-danger">Delete</button>

                <button id="keypair-display-button-pin" class="content-panel-button content-panel-button-highlighted">
                    Pin

                    <form id="keypair-display-button-pin-form" asp-action="PinKeyPair" asp-controller="Main" style="display: none;">
                        <input type="hidden" name="KeyPairId">
                    </form>
                </button>

                <button id="keypair-display-button-unpin" class="content-panel-button content-panel-button-danger">
                    Unpin

                    <form id="keypair-display-button-unpin-form" asp-action="UnPinKeyPair" asp-controller="Main" style="display: none;">
                        <input type="hidden" name="KeyPairId">
                    </form>
                </button>

                <button id="keypair-display-button-save" class="content-panel-button content-panel-button-highlighted">Save</button>

                <button id="keypair-display-button-download" class="content-panel-button content-panel-button-highlighted">Download</button>

                <button id="keypair-display-button-share" class="content-panel-button content-panel-button-highlighted">Share</button>
            </div>

            <pre id="keypair-display-publickey"></pre>                
        </div>

        <div id="keypair-display-loading" class="center">
            <img src="~/img/loading.svg" width="90">
        </div>
    </div>
</div>